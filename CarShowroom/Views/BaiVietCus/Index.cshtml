@model PagedList.IPagedList<CarShowroom.Models.BaiViet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- /navbar-->
<section class="pt-3">
    <div class="container  pt">
        <div class="row">
            <div class="col-md-9 bg-white">
                <h3 class="font-weight-bold text-cam pt-3"><i class="far fa-newspaper"></i> TẤT CẢ BÀI VIẾT</h3>
                @foreach (var item in Model)
                {
                    string title = item.descriptionShort;
                    <ul class="list-unstyled pagination border-top pt-3">
                        <li><img width="300" src="~/img/post/@item.img" alt=""></li>
                        <li class="pl-3">
                            <a class="card-link text-dark" href="~/chi-tiet-bai-viet/@item.slug"><h5 class="font-weight-bold ">@item.title</h5></a>
                         
                            <p class="text-body1"
                               class="text-cam font-weight-bold card-link " href="">
                                @if (title.Length > 270)
                                {@title.Substring(0, 270)}
                            else
                            { @title
                        }
                            </p>
                        </li>

                    </ul>
                }
                <div class="col-md-12 pt-3">
                    <ul class="pagination pagination-sm justify-content-center">
                        @{ int i = 1;}

                        @for (int j = i; j <= Model.PageCount; j++)
                        {
                            <li class="page-item"><a class="page-link text-secondary  active-@j" href="/bai-viet/?page=@j">@j</a></li>
                            i = j;
                        }
                    </ul>
                </div>
            </div>
            @*<div class="col-md-3">
                @Html.Action("topiccategory", "Baiviet");
            </div>*@
        </div>

    </div>
</section>

<style>
    .active-@ViewBag.page{
    background-color: yellow;
    }
</style>

