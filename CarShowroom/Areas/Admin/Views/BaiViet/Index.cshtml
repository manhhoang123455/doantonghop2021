@model IEnumerable<CarShowroom.Models.BaiViet>


<div class="product-status mg-tb-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <section class=" ">
                        <div class=" bg-white card p-3 ">

                            <div class="row">
                                <div class="col-md-9  w-100 ">
                                </div>
                                <div class="col-md-3 ">
                                    <div class=" pt-1 ml-5">
                                        <a class="text-white btn-sm btn-success" href="~/admin/BaiViet/Create">Add Post <i class="fas fa-plus"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-9  w-100 ">

                                </div>
                                <div class="col-md-12 p-3">

                                    <table id="myTable1" class="table px-3 table-striped table-bordered dt-responsive nowrap">
                                        <thead>
                                            <tr>
                                                <th>Hình ảnh</th>
                                                <th>Tên bài viết</th>
                                                <th>Loại bài viết</th>              
                                                <th>Chức Năng</th>
                                                <th>ID</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                string title = item.title;
                                                <tr>

                                                    <td><img width="20" src="~/img/post/@Html.DisplayFor(modelItem => item.img)"></td>
                                                    <td>

                                                        @if (title.Length > 50)
                                                        {
                                                            <a class=" font-weight-bold card-link " href="">@title.Substring(0, 50) ...</a>

                                                        }
                                                        else
                                                        {
                                                            <a class=" font-weight-bold card-link " href="">@title </a>
                                                        }

                                                    </td>
                                                    <td width="15%">  @Html.DisplayFor(modelItem => item.topid)</td>
                                                    <td> 
                                                        <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("delete", "BaiViet", new { id = item.ID })"> <i class="fas fa-trash-alt"></i></a>
                                                        <a class="btn btn-sm btn-light text-warning border" href="@Url.Action("Edit", "BaiViet", new { id = item.ID })">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                    </td>
                                                    <td class="text-cam">@Html.DisplayFor(modelItem => item.ID)</td>
                                                </tr>
                                            }
                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>
                    </section>

                    <script>
                        $("#post").addClass("active");
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>