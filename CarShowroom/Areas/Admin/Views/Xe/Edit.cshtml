@using CarShowroom.Models
@model CarShowroom.Models.Xe

@{
    ViewBag.Title = "Sửa Thông Tin Xe";
    var error = ViewBag.ImageError != null ? ViewBag.ImageError : "";
    ViewBag.Title = "Create";
    var dsHangXe = TempData["dsHangXe"] as List<HangXe>;
}
<div class="product-status mg-tb-15">
    <div class="container-fluid">
        <div class="row ">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <h2>Sửa Thông Tin Xe</h2>

                    @using (Html.BeginForm("Edit", "Xe", FormMethod.Post, new
                    {
                        enctype = "multipart/form-data"
                    }))
                    {
                        <div class="form-group float-right">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-sm btn-success" />
                            </div>
                        </div>
                        @Html.AntiForgeryToken()
                        @Html.Partial("~/Areas/Admin/Views/Shared/_Menu.cshtml")
                        <div class="container-fluid">
                            <div class="form-horizontal">
                                <h4>Xe</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.MaXe)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.TenXe, htmlAttributes: new { @class = "control-label col-md-1" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.TenXe, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TenXe, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PhienBan, htmlAttributes: new { @class = "control-label col-md-1" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.PhienBan, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.PhienBan, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.GiaNhap, htmlAttributes: new { @class = "control-label col-md-1" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.GiaNhap, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.GiaNhap, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.GiaChoThue, htmlAttributes: new { @class = "control-label col-md-1" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.GiaChoThue, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.GiaChoThue, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.SoLuongXe, htmlAttributes: new { @class = "control-label col-md-1" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.SoLuongXe, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SoLuongXe, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.SoLuongXeDaThue, htmlAttributes: new { @class = "control-label col-md-1" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.SoLuongXeDaThue, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SoLuongXeDaThue, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaHangXe, "MaHangXe", htmlAttributes: new { @class = "control-label col-md-1" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("MaHangXe", new SelectList(dsHangXe, "MaHangXe", "TenHangXe", @Model.MaHangXe), htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.MaHangXe, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label col-md-1" })
                                    <div class="col-md-10">
                                        <input type="file" name="ImageFile"  />
                                        <label class="text-danger">@error</label>
                                    </div>
                                </div>




                                <div class="col-md-10">
                                    <label for="psw"><span>Mô tả chi tiết</span></label>
                                    @Html.TextAreaFor(model => model.ChiTietXe, new
                                    {
                                        @class = "form-control textarea",
                                    @style = "width: 100%;font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"
                                    })
                                    @Html.ValidationMessageFor(model => model.ChiTietXe, "", new { @class = "text-danger" })
                                </div>

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- include libraries(jQuery, bootstrap) -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

