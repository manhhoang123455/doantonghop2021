@model CarShowroom.Models.khachhang_hoadon

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="product-status mg-tb-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <div class="product-status mg-tb-15">
                        <div class="container ">
                            <table class="table ">
                                <tr>
                                    <td>
                                        <span style="font-weight:bold;"> Tên khách hàng:</span> @Model.Khachhang.TenKhachHang
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <span style="font-weight:bold;"> Địa chỉ:</span> @Model.Khachhang.DiaChi
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <span style="font-weight:bold;"> Số điện thoại:</span> @Model.Khachhang.SoDienThoai
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <span style="font-weight:bold;"> số tài khoản:</span> @Model.Khachhang.SoTaiKhoan
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <span style="font-weight:bold;"> Ngân hàng:</span> @Model.Khachhang.NganHang
                                    </td>
                                <tr>
                                    <td>
                                        <span style="font-weight:bold;"> Số CMND:</span> @Model.Khachhang.CMND
                                    </td>
                                </tr>

                            </table>

                            <table class="table ">
                                <tr>
                                    <td>
                                        <span style="font-weight:bold;"> --Thông tin đơn hàng--</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <span style="font-weight:bold;"> Tổng tiền:</span> @Model.HoaDon.TongThanhTien.ToString("N0") VND
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <span style="font-weight:bold;"> hình thức thanh toán:</span> @Model.HoaDon.HinhThucThanhToan
                                    </td>
                                </tr>
                                <tr>
                                    @if (Model.HoaDon.TrangThaiThanhToan == 1)
                                    {
                                        <td>
                                            <span style="font-weight:bold;"> Trạng thái thanh toán:</span><span class="text-success">  Đã thanh toán</span>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <span style="font-weight:bold;"> Trạng thái thanh toán:</span> <span class="text-danger">  Chưa thanh toán</span>
                                        </td>
                                    }

                                </tr>
                                <tr>
                                    <td>
                                        <span style="font-weight:bold;"> Ngày nhận:</span> @Model.HoaDon.NgayNhan.ToString("dd-MM-yyyy")
                                    </td>
                                <tr>
                                    <td>
                                        <span style="font-weight:bold;"> Ngày trả:</span> @Model.HoaDon.NgayTra.ToString("dd-MM-yyyy")
                                    </td>
                                </tr>

                            </table>
                            @Html.Action("getListProduct", "DonHang", new { id = Model.HoaDon.MaHoaDon})
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




