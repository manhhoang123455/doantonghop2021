@model IEnumerable<CarShowroom.Models.ChiTietHoaDon_Xe>
@{
    Layout = null;
}
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Xe.TenXe)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Xe.GiaChoThue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChiTietHoaDon.SoLuong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Xe.HinhAnh)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>
                @Html.DisplayFor(model => item.Xe.TenXe)
            </th>

            <th>
                @item.Xe.GiaChoThue.ToString("NO") VND
            </th>
            <th>
                @Html.DisplayFor(model => item.ChiTietHoaDon.SoLuong)
            </th>
            <th>
                <img src="@item.Xe.HinhAnh" alt="Alternate Text" style="width:150px;height:auto" />
            </th>
        </tr>
    }



</table>