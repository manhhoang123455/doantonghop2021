@model IEnumerable<CarShowroom.Models.ChuDeBaiViet>

         
<div class="product-status mg-tb-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <section class=" ">
                        <div class=" bg-white card p-3 ">

                            <div class="row">
                                <div class="col-md-9  w-100 ">

                                </div>
                                <div class="col-md-3 p-3 ">
                                    <div class=" pt-1  ml-5">
                                        <a class="text-white btn-sm btn-success" href="~/Admin/ChuDeBaiViet/Create">Add Topic <i class="fas fa-plus"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-9  w-100 ">

                                </div>
                                <div class="col-md-12 p-3">

                                    <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                                        <thead>
                                            <tr>
                                                <th width="30%">Tên chủ đề</th>
                                                <th width="20%">Link</th>
                                                <th width="20%">Chức Năng</th>
                                                <th>ID</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td><a class=" font-weight-bold card-link " href=""> @Html.DisplayFor(modelItem => item.name)</a></td>
                                                    <td> @Html.DisplayFor(modelItem => item.slug)</td>
                                                    <td>
                                                       
                                                        <a class="btn btn-sm  text-danger border" href="@Url.Action("delete", "ChuDeBaiViet", new { id = item.ID })"> <i class="fas fa-trash-alt"></i></a>
                                                        <a class="btn btn-sm  text-warning border" href="@Url.Action("Edit", "ChuDeBaiViet", new { id = item.ID })">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                    </td>
                                                    <td class="text-cam">@Html.DisplayFor(modelItem => item.ID)</td>
                                                </tr>
                                            }
                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>
                    </section>
                    <script>
                        $("#topic").addClass("active");
                    </script>

                </div>
            </div>
        </div>
    </div>
</div>


